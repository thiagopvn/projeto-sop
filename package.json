{
  "name": "projeto-sop",
  "version": "3.0.0",
  "description": "Sistema de Ordens Policiais",
  "main": "public/index.html",
  "scripts": {
    "dev:sass": "sass --watch src/scss:public/css",
    "dev:js": "esbuild src/js/main.js --bundle --outdir=public/js --sourcemap --watch",
    "dev:copy": "cp -r src/pages/* public/pages/ && cp -r src/assets/* public/assets/ && cp src/index.html public/",
    "dev": "npm run dev:copy && npm-run-all --parallel dev:sass dev:js",
    "build:clean": "rm -rf public && mkdir -p public/{pages,css,js,assets/{icons,images}}",
    "build:copy": "cp src/index.html public/ && [ -d src/assets ] && cp -r src/assets/* public/assets/ || true",
    "build:sass": "sass src/scss:public/css --no-source-map --style=compressed",
    "build:js": "esbuild src/js/main.js --bundle --minify --outdir=public/js",
    "build": "npm run build:clean && npm run build:copy && npm-run-all --parallel build:sass build:js",
    "serve": "live-server public --port=8080",
    "preview": "npm run build && npm run serve"
  },
  "keywords": ["police", "orders", "management"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "live-server": "^1.2.2",
    "sass": "^1.80.7",
    "esbuild": "^0.24.0"
  },
  "dependencies": {
    "lucide": "^0.454.0",
    "notyf": "^3.10.0",
    "chart.js": "^4.4.6",
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/interaction": "^6.1.15",
    "dropzone": "^6.0.0-beta.2"
  }
}
