{
  "name": "projeto-sop",
  "version": "2.0.0",
  "description": "Sistema de Organização de Documentos do CBMERJ",
  "scripts": {
    "build:css": "npx sass --no-source-map scss/main.scss css/styles.css",
    "watch:css": "sass --no-source-map --watch scss/main.scss css/styles.css",
    "build": "npm install && npm run build:css",
    "postinstall": "chmod +x node_modules/.bin/sass",
    "dev": "npx esbuild --bundle js/main.js --outfile=dist/main.js --watch",
    "lint": "npx eslint js/**/*.js",
    "preview": "npx http-server -p 4173"
  },
  "author": "Gemini",
  "license": "UNLICENSED",
  "devDependencies": {
    "sass": "^1.69.5"
  },
  "dependencies": {
    "esbuild": "^0.25.6",
    "eslint": "^9.30.1",
    "http-server": "^14.1.1",
    "lucide": "^0.525.0"
  }
}
